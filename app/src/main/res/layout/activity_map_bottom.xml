<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/botttom_rela"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/line"
        android:layout_width="match_parent"
        android:layout_height="@dimen/app_foot_height"
        android:paddingTop="5dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_weight="1"
        android:clickable="true"
        android:background="@color/hx_white"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <com.grandtech.map.view.checkimageview.CheckImageView
                android:id="@+id/ivSelect"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:button="@null"
                android:tag="2"
                app:lock_able="true"
                app:src="@mipmap/one_level_select"
                app:src_c="@mipmap/one_level_select_c" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:textColor="@color/black"
                android:textSize="9sp"
                android:text="选择" />


        </LinearLayout>

        <LinearLayout

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <com.grandtech.map.view.checkimageview.CheckImageView
                android:id="@+id/ivDrawPolygon"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:button="@null"
                android:tag="2"
                app:lock_able="true"
                app:src="@mipmap/one_level_draw_feature"
                app:src_c="@mipmap/one_level_draw_feature_c" />

            <TextView
                android:id="@+id/tv_mapping"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:textColor="@color/black"
                android:textSize="9sp"
                android:text="绘制" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <com.grandtech.map.view.checkimageview.CheckImageView
                android:id="@+id/ivAreaCut"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:button="@null"
                android:tag="2"
                app:lock_able="true"
                app:src="@mipmap/one_level_area_cut"
                app:src_c="@mipmap/one_level_area_cut_c" />

            <TextView
                android:id="@+id/tv_division"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:textColor="@color/black"
                android:textSize="9sp"
                android:text="分割" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <com.grandtech.map.view.checkimageview.CheckImageView
                android:id="@+id/ivDelete"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:button="@null"
                android:tag="2"
                app:lock_able="false"
                app:src="@mipmap/one_level_delete"
                app:src_c="@mipmap/one_level_delete_c" />

            <TextView
                android:id="@+id/tv_delete"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:textColor="@color/black"
                android:textSize="9sp"
                android:text="删除" />

        </LinearLayout>
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/line"
        android:layout_centerHorizontal="true"
        android:orientation="horizontal">


        <TextView
            android:id="@+id/tv_scale"
            android:layout_width="100dp"
            android:layout_height="30dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:gravity="center_horizontal"
            android:text="比例尺"
            android:textColor="@color/hx_red"
            android:textSize="20dp" />
    </RelativeLayout>
</RelativeLayout>
